<!-- Products Start -->
<div class="container-fluid ">
    <h4 class="text-truncate mb-3">Search Result For '{{query}}'</h4>

    <div class="row px-xl-10 pb-3">
        {{!-- BOF listing of products --}}
        {{#each searchResults}}
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="card product-item border-0 mb-4">
                <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                    <a href="/product-detail/{{this.slug}}">
                        <img class="img-fluid w-100" style="height: 15rem;" src="{{this.image_urls.[0]}}" alt="">
                    </a>
                </div>
                <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                    <h6 class="text-truncate mb-3">
                        <a href="/product-detail/{{this.slug}}">{{this.product_name}}</a>
                    </h6>
                    <div class="d-flex justify-content-center">
                        <h6>Rs.{{this.price}}</h6>
                        <h6 class="text-muted ml-2"><del>Rs.{{this.mrp}}</del></h6>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between bg-light border">
                    <a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-heart text-primary mr-1"></i>Wishlist</a>
                    {{!-- <button onclick="addToCart('{{this._id}}')" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</button> --}}
                    {{#isGreaterThan this.stock 0}}
                    <button onclick="addToCart('{{this._id}}')" class="btn btn-primary px-3"><i class="fa fa-shopping-cart mr-1"></i> Add To Cart</button>
                    {{else}}
                    <button class="btn btn-primary px-3 disabled"> Out of Stock</button>

                    {{/isGreaterThan}}
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-12 text-center">
            <p>"-" No Products "-"</p>
        </div>
        {{/each}}
        {{!--EOF listing of products --}}

    </div>

    {{!-- Pagination --}}
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center mt-4">
            {{#rangeWithQuery 1 pagination.totalPages query}}
            <li class="page-item{{#if (eq this.page pagination.page)}} active{{/if}}">
                <a class="page-link" href="/search?query={{this.query}}&page={{this.page}}">{{this.page}}</a>
            </li>
            {{/rangeWithQuery}}
        </ul>
    </nav>
</div>
<!-- Products End -->