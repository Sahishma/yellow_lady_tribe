<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Order ID</th>
                                <th scope="col">Total Amount</th>
                                <th scope="col">Payment Method</th>
                                <th>Order Status</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>

                            {{#each orders}}
                            <tr>
                                <th scope="row">{{this._id}}</th>
                                <td>{{this.totalAmount}}</td>
                                <td>{{this.payment}}</td>
                                <td>{{this.status}}</td>
                                <td>
                                    <a href="/view-order-products/{{this._id}}" class="btn btn-primary m-2">View Products</button></a>
                                </td>
                            </tr>

                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>