<section>
    <div class="container mt-5">
        <div class="row ">
            {{!-- BOF listing of products --}}
            {{#each products}}
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 pb-3">
                <div class="card" style="width 15rem; height:24rem">
                    <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                        <img class="card-img-top" style="height: 15rem;" src="/img/{{this.product._id}}.jpg" alt="">
                    </div>
                    <div class="card-body ">
                        <h5 class="card-title">{{this.product.product_name}}</h5>
                        <p class="card-text">Rs.{{this.product.price}}</p>
                        <p class="card-text">Quantity:{{this.quantity}}</p>

                    </div>
                </div>
            </div>
            {{/each}}
            {{!--EOF listing of products --}}

        </div>
    </div>
</section>