<!-- Navbar End -->
<div class="container-fluid mb-5">
  <div class="row border-top px-xl-10">
    <div class="container-fluid">
      <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
        <a href="/" class="text-decoration-none d-block d-lg-none">
          <h1 class="m-0 display-5 font-weight-semi-bold">yellOw</h1>
        </a>
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
          <div class="navbar-nav mr-auto py-0">
            <a href="/" class="nav-item nav-link active">Home</a>
            {{#each categories}}
            <a href="/products/{{this._id}}" class="nav-item nav-link">{{this.category_name}}</a>
            {{/each}}
          </div>

          <div class="navbar-nav ml-auto py-0">
            {{# if user}}
            <div class="dropdown">
              <button class="nav-item nav-link dropdown-toggle btn btn-link" id="profileDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-user text-primary"></i>
                <span class="d-none d-sm-inline">{{user.username}}</span>
              </button>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="profileDropdown">
                <a class="dropdown-item" href="/profile">Profile</a>
                <a class="dropdown-item" href="/orders">My Orders</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/logout">Logout</a>
              </div>
            </div>
            {{else}}
            <a class="nav-item nav-link" href="/login">Login</a>
            <a href="/register" class="nav-item nav-link">Register</a>
            {{/ if}}
          </div>


        </div>
      </nav>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('.dropdown-toggle').dropdown();
  });
</script>
