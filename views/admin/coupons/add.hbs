<!-- Form Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-light rounded h-100 p-4">
                {{!-- <h6 class="mb-4">Add Coupons</h6> --}}
                <form action="/admin/coupons/add" method="post" id="addProducts_form">

                    <div class="row mb-3">
                        <label for="coupon_code" class="col-sm-2 col-form-label">Title</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="title" name="title" required />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="slug" class="col-sm-2 col-form-label">slug</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="slug" name="slug" required oninput="validateSlug()" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="coupon_code" class="col-sm-2 col-form-label"> Coupon Code</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="coupon_code" name="coupon_code" required oninput="validateCouponCode()" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="type" class="col-sm-2 col-form-label">Type</label>
                        <div class="col-sm-10">
                            <select class="form-select mb-3" id="type" name="type" required aria-label="Default select example">
                                {{!-- <option value="percentage">Percentage</option> --}}
                                <option value="flat">Flat</option>
                            </select>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="value" class="col-sm-2 col-form-label">Value</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="value" name="value" required />
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary m-2">Add New</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Form End -->

<script>
    function validateSlug() {
        var slugInput = document.getElementById('slug');
        var slug = slugInput.value.trim();

        // Regular expression to validate the slug (allowing lowercase letters, numbers, hyphens, and underscores)
        var slugPattern = /^[a-z0-9-_]+$/;

        if (!slugPattern.test(slug)) {
            // Display an error message
            slugInput.setCustomValidity('Invalid slug. Only lowercase letters, numbers, hyphens, underscores are allowed.');
        } else {
            // Clear the error message
            slugInput.setCustomValidity('');
        }
    }

    function validateCouponCode() {
        var couponCodeInput = document.getElementById('coupon_code');
        var couponCode = couponCodeInput.value.trim();

        // Regular expression to validate the coupon code (allowing lowercase letters, capital letters, and underscores)
        var couponCodePattern = /^[a-zA-Z_]+$/;

        if (!couponCodePattern.test(couponCode)) {
            // Display an error message
            couponCodeInput.setCustomValidity('Invalid coupon code. Only lowercase letters, capital letters, and underscores are allowed.');
        } else {
            // Clear the error message
            couponCodeInput.setCustomValidity('');
        }
    }
</script>