<section>

    <div class="col-lg-4">

        <h4>User Details</h4>
        <div class="d-flex flex-column align-items-left justify-content-center" style="min-height: 150px">
            <div class="d-inline-flex">
                <ul style="list-style: none; padding: 0; margin: 0;">
                    <li style="margin-bottom: 10px; text-align: left;"><strong>User ID:</strong> <span> {{orderDetails.user.userId}}</span></li>
                    <li style="margin-bottom: 10px; text-align: left;"><strong>User Name:</strong> <span> {{orderDetails.user.username}}</span></li>
                    <li style="margin-bottom: 10px; text-align: left;"><strong>Email:</strong> <span>{{orderDetails.user.email}}</span></li>
                    <li style="margin-bottom: 10px; text-align: left;"><strong>Phone Number:</strong> <span>{{orderDetails.user.phone}}</span></li>

                    <!-- Add more order details as needed -->
                </ul>
            </div>
        </div>

        <hr>

        <h4>Shipping Address</h4>
        <div class="d-flex flex-column align-items-left justify-content-center" style="min-height: 150px">
            <div class="d-inline-flex">
                <ul style="list-style: none; padding: 0; margin: 0;">
                    <li style="margin-bottom: 10px; text-align: left;"><strong>Name:</strong> <span>{{orderDetails.deliveryDetails.firstName}} {{orderDetails.deliveryDetails.lastName}}</span></li>
                    <li style="margin-bottom: 10px; text-align: left;"><strong>Address:</strong> <span>{{orderDetails.deliveryDetails.address}}</span></li>
                    <li style="margin-bottom: 10px; text-align: left;"><strong>City:</strong> <span>{{orderDetails.deliveryDetails.city}}</span></li>
                    <li style="margin-bottom: 10px; text-align: left;"><strong>State:</strong> <span>{{orderDetails.deliveryDetails.state}}</span></li>
                    <li style="margin-bottom: 10px; text-align: left;"><strong>Pincode:</strong> <span>{{orderDetails.deliveryDetails.pincode}}</span></li>
                    <li style="margin-bottom: 10px; text-align: left;"><strong>Phone Number:</strong> <span>{{orderDetails.deliveryDetails.mobile}}</span></li>
                    <!-- Add more order details as needed -->
                </ul>
            </div>
        </div>

        <hr>
        <h4>Billing Details</h4>
        <div class="d-flex flex-column align-items-left justify-content-center mb-1" style="min-height: 150px">
            <div class="d-inline-flex">
                <ul style="list-style: none; padding: 0; margin: 0;">
                    <li style="margin-bottom: 10px; text-align: left;"><strong>Payment Method:</strong> <span>{{orderDetails.payment}}</span></li>
                    <li style="margin-bottom: 10px; text-align: left;"><strong>Order Date:</strong> <span>{{orderDetails.date}}</span></li>
                    <li style="margin-bottom: 10px; text-align: left;"><strong>Total Amount:</strong> <span>Rs.{{orderDetails.totalAmount}}</span></li>

                    <!-- Add more order details as needed -->
                </ul>
            </div>
        </div>

        <hr>

    </div>

    <div class="container mt-5">
        <div class="row ">
            {{!-- BOF listing of products --}}
            {{#each orderDetails.products}}
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 pb-3">
                <div class="card" style="width 15rem; height:24rem">
                    <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                        <img class="card-img-top" style="height: 15rem;" src="/img/{{this.product._id}}.jpg" alt="">
                    </div>
                    <div class="card-body ">
                        <h5 class="card-title">{{this.productName}}</h5>
                        <p class="card-text">Rs.{{this.price}}</p>
                        <p class="card-text">Quantity:{{this.quantity}}</p>

                    </div>
                </div>
            </div>
            {{/each}}
            {{!--EOF listing of products --}}

        </div>
    </div>

    <hr>

    <h4>order status </h4>

    <div class="row">
        <div class="col-lg-12">

            <div class="horizontal-timeline">

                <ul class="list-inline items d-flex justify-content-between">
                    <li class="list-inline-item items-list">
                        <p class="py-1 px-2 rounded text-white" style="background-color: #f37a27;">Ordered</p class="py-1 px-2 rounded text-white" style="background-color: #f37a27;">
                    </li>
                    <li class="list-inline-item items-list">
                        <p class="py-1 px-2 rounded text-white" style="background-color: #f37a27;">Shipped</p class="py-1 px-2 rounded text-white" style="background-color: #f37a27;">
                    </li>
                    <li class="list-inline-item items-list">
                        <p class="py-1 px-2 rounded text-white" style="background-color: #f37a27;">On the way
                        </p>
                    </li>
                    <li class="list-inline-item items-list text-end" style="margin-right: 8px;">
                        <p style="margin-right: -8px;">Delivered</p>
                    </li>
                </ul>

            </div>

        </div>
    </div>

</section>

<style>
    @media (min-width: 1025px) {
        .h-custom {
            height: 100vh !important;
        }
    }

    .horizontal-timeline .items {
        border-top: 2px solid #ddd;
    }

    .horizontal-timeline .items .items-list {
        position: relative;
        margin-right: 0;
    }

    .horizontal-timeline .items .items-list:before {
        content: "";
        position: absolute;
        height: 8px;
        width: 8px;
        border-radius: 50%;
        background-color: #ddd;
        top: 0;
        margin-top: -5px;
    }

    .horizontal-timeline .items .items-list {
        padding-top: 15px;
    }
</style>