<!-- Table Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                                <h6 class="mb-0">Categories</h6>
                                <a href="/admin/categories/add">
                                    <button type="button" class="btn btn-primary m-2" >Add New</button>
                                </a>
                            </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Category Name</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>

                            {{#each categories}}
                            <tr>
                                <th scope="row">{{@index}}</th>
                                <td>{{this.category_name}}</td>
                                <td>
                                    <a href="/admin/categories/edit-categories/{{this._id}}" class="btn btn-primary m-2">Edit</button></a>
                                    <a href="/admin/categories/delete-categories/{{this._id}}" class="btn btn-danger m-2" onclick="console.log('{{this.category_name}}'); return confirm('You\'re deleting {{category_name}} permanently,are you sure?')">Delete</a>
                                </td>
                            </tr>

                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Table End -->